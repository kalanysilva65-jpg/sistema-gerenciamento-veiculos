// Classe que representa uma moto e herda de Veiculo
public class Moto extends Veiculo {
    private int cilindrada;

    // Construtor
    public Moto(String marca, String modelo, int ano, int cilindrada) {
        super(marca, modelo, ano);
        this.cilindrada = cilindrada;
    }

    // MÃ©todos getter e setter para 'cilindrada'
    public int getCilindrada() {
        return cilindrada;
    }

    public void setCilindrada(int cilindrada) {
        this.cilindrada = cilindrada;
    }

    // ImplementaÃ§Ã£o do mÃ©todo abstrato
    @Override
    public String informacoesVeiculo() {
        return "MOTO\n" +
               "Marca: " + marca + "\n" +
               "Modelo: " + modelo + "\n" +
               "Ano: " + getAno() + "\n" +
               "Cilindrada: " + cilindrada + "cc\n";
    }
}
