// Classe abstrata base que representa um veÃ­culo genÃ©rico
public abstract class Veiculo {
    public String marca;
    public String modelo;
    private int ano;

    // Construtor
    public Veiculo(String marca, String modelo, int ano) {
        this.marca = marca;
        this.modelo = modelo;
        this.ano = ano;
    }

    // MÃ©todos getter e setter para o atributo privado 'ano'
    public int getAno() {
        return ano;
    }

    public void setAno(int ano) {
        this.ano = ano;
    }

    // MÃ©todo abstrato que deve ser implementado nas subclasses
    public abstract String informacoesVeiculo();
}
